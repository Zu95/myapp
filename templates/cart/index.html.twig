{% extends 'index.html.twig' %}
{% block title %}Koszyk
    {% endblock %}
{% block body %}
    {% block breadcrumbs %}
        <div id="heading-breadcrumbs">
            <div class="container">
                <div class="row">
                    <div class="col-md-7">
                        <h1>Koszyk</h1>
                    </div>
                    <div class="col-md-5">
                        <ul class="breadcrumb">
                            <li><a href="{{ url('homepage') }}">Strona główna</a></li>
                            <li>Koszyk</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
    <div id="content">
        <div class="container">

            <div class="box-header">
                <h3>Zawartość koszyka</h3>
            </div>


            <div class="col-md-12 clearfix" id="basket">

                <div class="box">

                    <form method="post" action="shop-checkout1.html">

                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th colspan="2">Produkt</th>
                                    <th>Ilość</th>
                                    <th>Cena</th>
                                    <th colspan="2">Suma</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for row in cart %}
                                <tr>
                                    <td>
                                        <a href="#">
                                            <img src="uploads/photos/{{ row.img }}" alt="{{ row.name }}">
                                        </a>
                                    </td>
                                    <td><a href="#">{{ row.name }}</a>
                                    </td>
                                    <td>
                                       {{ row.qty }}
                                    </td>
                                    <td>{{ row.price }} zł</td>
                                    <td>{{ row.qty * row.price }}</td>
                                    <td><a href="#"><i class="fa fa-trash-o"></i></a>
                                    </td>
                                </tr>
                                {% endfor %}

                                <tfoot>
                                <tr>
                                    <th colspan="4">Suma</th>
                                    <th colspan="3">suma?? cena?</th>
                                </tr>
                                </tfoot>
                            </table>

                        </div>
                        <!-- /.table-responsive -->

                        <div class="box-footer">
                            <div class="pull-left">
                                <a href="" class="btn btn-default"><i class="fa fa-chevron-left"></i> Wróć</a>
                            </div>
                            <div class="pull-right">
                                <button class="btn btn-default"><i class="fa fa-refresh"></i> Aktualizuj koszyk</button>
                                <button type="submit" class="btn btn-template-main">Zamów <i class="fa fa-chevron-right"></i>
                                </button>
                            </div>
                        </div>

                    </form>

                </div>
{% endblock %}