{% extends 'index.html.twig' %}
{% block body %}
    {% block breadcrumbs %}
        <div id="heading-breadcrumbs">
            <div class="container">
                <div class="row">
                    <div class="col-md-7">
                        <h1>{{ 'action.change_password'|trans }}</h1>
                    </div>
                    <div class="col-md-5">
                        <ul class="breadcrumb">
                            <li><a href="{{ url('homepage') }}">{{ 'view.homepage'|trans }}</a></li>
                            <li><a href="{{ url('customer_index') }}">{{ 'view.customer'|trans }}</a></li>
                            <li>{{ 'view.my_orders'|trans }}</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
    <div id="content">
        <div class="container">
            <div class="row">
                <div class="col-md-9" id="customer-orders">
                    <div class="box">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    <th>{{ 'label.id'|trans }}</th>
                                    <th>{{ 'label.status'|trans }}</th>
                                    <th>{{ 'label.daus'|trans }}</th>
                                    <th>{{ 'label.amount_per_day'|trans }}</th>
                                    <th>{{ 'action.browse'|trans }}</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for row in orders %}
                                    <tr>
                                        <th>#{{ row.borrowed_id }}</th>
                                        <td>{{ row.status }}</td>
                                        <td>{{ row.days }}</td>
                                        <td>{{ row.order_price }} {{ 'curr'|trans }}</td>
                                        <td><a href="{{ url('customer_order_view', {'id': row.borrowed_id}) }}" class="btn btn-template-main btn-sm">{{ 'action.view'|trans }}</a></td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>

                    </div>

                </div>
                {% include 'customer/_rightmenu.html.twig' %}
            </div>
        </div>
    </div>

{% endblock %}