{% extends 'index.html.twig' %}
{% block body %}
    {% block breadcrumbs %}
        <div id="heading-breadcrumbs">
            <div class="container">
                <div class="row">
                    <div class="col-md-7">
                        <h1>{{ 'view.admin'|trans }}</h1>
                    </div>
                    <div class="col-md-5">
                        <ul class="breadcrumb">
                            <li><a href="{{ url('homepage') }}">{{ 'view.homepage'|trans }}</a></li>
                            <li><a href="{{ url('admin_index') }}">{{ 'view.admin'|trans }}</a></li>
                            <li>{{ 'view.users'|trans }}</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
    <div id="content">
        <div class="container">
            <div class="row">
                <div class="col-md-9" id="customer-orders">
                    <div class="box">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    <th>{{ 'table.id'|trans }}</th>
                                    <th>{{ 'label.username'|trans }}</th>
                                    <th>{{ 'label.firstname'|trans }} {{ 'label.surname'|trans }}</th>
                                    <th>{{ 'label.role'|trans }}</th>
                                    <th>{{ 'label.telephone'|trans }}</th>
                                    <th>{{ 'label.email'|trans }}</th>
                                    <th>{{ 'label.adress'|trans }}</th>
                                    <th>{{ 'label.info'|trans }}</th>
                                    <th>{{ 'action'|trans }}</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for row in users %}
                                    <tr>
                                        <th>#{{ row.user_id }}</th>
                                        <td>{{ row.username }}</td>
                                        <td>{{ row.firstname }} {{ row.surname }}</td>
                                        <td>{{ row.role_name }}</td>
                                        <td>{{ row.telephone }}</td>
                                        <td>{{ row.email }}</td>
                                        <td>{{ row.adress }}</td>
                                        <td>{{ row.information }}</td>
                                        <td><a href="{{ url('admin_user_edit', {'id': row.user_id}) }}" class="btn btn-template-main btn-sm">{{ 'action.edit'|trans }}</a>
                                            <a href="{{ url('admin_password_change', {'id': row.user_id}) }}" class="btn btn-template-main btn-sm">{{ 'action.change_password'|trans }}</a></td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>

                    </div>

                </div>
                {% include 'admin/_rightmenu.html.twig' %}
            </div>
        </div>
    </div>

{% endblock %}