{% extends 'index.html.twig' %}
{% block body %}
    {% block breadcrumbs %}
        <div id="heading-breadcrumbs">
            <div class="container">
                <div class="row">
                    <div class="col-md-7">
                        <h1>Panel Administracyjny</h1>
                    </div>
                    <div class="col-md-5">
                        <ul class="breadcrumb">
                            <li><a href="{{ url('homepage') }}">Strona główna</a></li>
                            <li><a href="{{ url('admin_index') }}">Panel administracyjny</a></li>
                            <li>Zamówienia</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
<div id="content">
    <div class="container">
        <div class="row">
            <div class="col-md-9" id="customer-orders">
            <div class="box">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Zamawiający</th>
                            <th>Status</th>
                            <th>Data</th>
                            <th>Od</th>
                            <th>Do</th>
                            <th>Wartość</th>
                            <th>Przeglądaj</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for row in orders %}
                            <tr>
                                <th>#{{ row.borrowed_id }}</th>
                                <td>{{ row.firstname }} {{ row.surname }}</td>
                                <td>Status</td>
                                <td>{{ row.date }}</td>
                                <td>{{ row.from }}</td>
                                <td>{{ row.to }}</td>
                                <td>{{ row.order_price }}</td>
                                <td><a href="{{ url('admin_order_view', {'id': row.borrowed_id}) }}" class="btn btn-template-main btn-sm">Zobacz</a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

            </div>

            </div>
            {% include asset('admin/_rightmenu.html.twig') %}
        </div>
    </div>
</div>

{% endblock %}